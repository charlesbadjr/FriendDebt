#:total_debt, :debt_to, 
#:description, :payment_amount, 
#:interest_rate, 
#:total_number_payments, :amount_remaining




<h1 class="header" > Add Some Debt </h1>

<%= form_for [@user, @debt] do |f| %>

<div class="form">    

  <div class="field" > 
    <%= f.label :debt_to %>
    <%= f.text_field :debt_to, required: true %>
  </div>

  <div class="field" >
    <%= f.label :total_debt %>
    <%= f.text_field :total_debt, required: true %>
  </div>

  <div class="field" >
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="field" >
    <%= f.label :payment_amount %>
    <%= f.text_field :payment_amount, required: true %>
  </div>
  
  <div class="field" >
    <%= f.label :interest_rate %>
    <%= f.text_field :interest_rate, required: true %>
  </div>
  
   
  <%= f.submit %>

<% end %>
</div>